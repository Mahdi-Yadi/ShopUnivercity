@model ShopUnivercity.Web.Models.Entities.Orders.Order
@{
    ViewData["Title"] = "جزییات فاکتور";
}
<partial name="_Navbar" />
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <div class="dashboard_tab_button">
                        <ul role="tablist" class="nav flex-column dashboard-list">
                            <partial name="Menu" />
                        </ul>
                    </div>
                </div>
                <section class="main_content_area">
                    <div class="container">
                        <div class="account_dashboard">
                            <div class="row">

                                <div class="col-sm-12 col-md-9 col-lg-9">
                                    <div class="tab-content dashboard_content">

                                        <table class="table">
                                            <thead class="text-center">
                                                <tr role="row">
                                                    <th> نام محصول </th>
                                                    <th> قیمت </th>
                                                    <th> تعداد </th>
                                                    <th> اقدامات </th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @if (Model.OrderDetails.Count > 0)
                                                {
                                                    @foreach (var item in Model.OrderDetails)
                                                    {
                                                        <tr class="text-center">
                                                            <td>@item.Product.Title</td>
                                                            <td>
                                                                @if (item.Product.Count > 0)
                                                                {
                                                                    decimal sumPrice = 0;

                                                                    var price = item.Product.Price;

                                                                    sumPrice += price * item.Count;

                                                                    @sumPrice.ToString("#,0")
                                                                    <span> تومان </span>
                                                                }
                                                                else
                                                                {
                                                                    <span>0</span>
                                                                }
                                                            </td>
                                                            <td>@item.Count</td>
                                                            <td>
                                                                @if (Model.IsPay == false)
                                                                {
                                                                    <a asp-area="UserPanel" asp-controller="Orders" asp-action="DeleteOrderDetail" asp-route-id="@item.Id">
                                                                        حذف
                                                                    </a>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>

                                        </table>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
